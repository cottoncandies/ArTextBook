
@{
    ViewData["Title"] = "系统登录";    
}
<div class="login-middle-box text-center loginscreen">
    <div>
        <div>
            <h1 class="logo-name"><img src="~/img/logo.png"></h1>
        </div>
        <h3>欢迎使用</h3>
        @if (ViewData["errors"] != null)
        {
            <br />
            <ul style="color:red">
                <li>@ViewData["errors"]</li>
            </ul>
        }
        <form name="loginForm" class="login-m-t" action="/User/Login" method="post" enctype="application/x-www-form-urlencoded">
            <div class="form-group">
                <input name="username" type="text" class="form-control" placeholder="用户名" required="required">
            </div>
            <div class="form-group">
                <input name="password" type="password" class="form-control" placeholder="密码" required="required"
                       data-val="true" data-val-required="The Password field is required.">
            </div>
            <button type="submit" class="btn btn-primary block login-full-width login-m-b">登 录</button>
        </form>
    </div>
</div>
